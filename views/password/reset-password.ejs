<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/commonhead') %>
  </head>
  <body class="account-page">
    <div class="main-wrapper">
      <%- include ('../partials/homeheader') %>
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-8 offset-md-2">
              <!-- Register Content -->
              <div class="account-content">
                <div class="row align-items-center justify-content-center">
                  <div class="col-md-7 col-lg-6 login-left">
                    <img
                      src="/img/vendor/login-banner.png"
                      class="img-fluid"
                      alt="Password Reset"
                    />
                  </div>
                  <div class="col-md-12 col-lg-6 login-right">
                    <%- include ('../partials/messages') %>
                    <div class="login-header">
                      <h3>Password Reset</h3>
                    </div>

                    <!-- Register Form -->
                    <form
                      action="/reset-password"
                      method="post"
                      data-parsley-validate
                    >
                      <div class="row">
                        <input
                          type="text"
                          name="id"
                          value="<%= user._id %>"
                          class="d-none"
                        />
                        <div class="col-md-12">
                          <div class="form-group form-focus">
                            <input
                              id="password"
                              type="password"
                              class="form-control floating"
                              name="password"
                              minlength="6"
                              required
                            />
                            <label class="focus-label">New Password</label>
                          </div>
                        </div>
                      </div>
                      <button
                        class="btn btn-primary btn-block btn-lg login-btn"
                        type="submit"
                      >
                        Submit
                      </button>
                      <!-- <div class="login-or">
                        <span class="or-line"></span>
                        <span class="span-or">or</span>
                      </div>
                      <div class="row form-row social-login">
                        <div class="col-6">
                          <a href="#" class="btn btn-facebook btn-block"
                            ><i class="fab fa-facebook-f mr-1"></i> Login</a
                          >
                        </div>
                        <div class="col-6">
                          <a href="#" class="btn btn-google btn-block"
                            ><i class="fab fa-google mr-1"></i> Login</a
                          >
                        </div>
                      </div> -->
                    </form>
                    <!-- /Register Form -->
                  </div>
                </div>
              </div>
              <!-- /Register Content -->
            </div>
          </div>
        </div>
      </div>
      <%- include ('../partials/homefooter') %>
    </div>

    <%- include ('../partials/commonscripts') %>
  </body>
</html>
