<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/commonhead') %>
  </head>
  <body class="account-page">
    <div class="main-wrapper">
      <%- include ('../partials/homeheader') %>
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-8 offset-md-2">
              <!-- Register Content -->
              <div class="account-content">
                <div class="row align-items-center justify-content-center">
                  <div class="col-md-7 col-lg-6 login-left">
                    <img
                      src="/img/vendor/login-banner.png"
                      class="img-fluid"
                      alt="Consultant Register"
                    />
                  </div>
                  <div class="col-md-12 col-lg-6 login-right">
                    <%- include ('../partials/messages') %>
                    <div class="login-header">
                      <h3>Consultant Register - Continue</h3>
                    </div>

                    <!-- Register Form -->
                    <form
                      action="/register-consultant-complete"
                      method="post"
                      data-parsley-validate
                    >
                      <input
                        type="text"
                        class="d-none"
                        name="id"
                        value="<%= user._id %>"
                      />
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group form-focus">
                            <input
                              id="phone"
                              type="text"
                              class="form-control floating"
                              name="phone"
                              required
                            />
                            <label class="focus-label">Phone Number</label>
                          </div>
                        </div>
                        <div class="col-md-12">
                          <div class="form-group form-focus">
                            <input
                              id="certification"
                              type="text"
                              class="form-control floating"
                              name="certification"
                              required
                            />
                            <label class="focus-label">Certificate</label>
                          </div>
                        </div>
                        <div class="col-md-12">
                          <div class="form-group form-focus">
                            <input
                              id="expertise"
                              type="text"
                              class="form-control floating"
                              name="expertise"
                              required
                            />
                            <label class="focus-label">Expertise</label>
                          </div>
                        </div>
                        <div class="col-md-12">
                          <div class="form-group form-focus">
                            <input
                              id="company"
                              type="text"
                              class="form-control floating"
                              name="company"
                              required
                            />
                            <label class="focus-label">Company Name</label>
                          </div>
                        </div>
                        <div class="col-md-12">
                          <div class="form-group form-focus">
                            <input
                              id="street"
                              type="text"
                              class="form-control floating"
                              name="street"
                              required
                            />
                            <label class="focus-label">Street</label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group form-focus">
                            <input
                              id="state"
                              type="text"
                              class="form-control floating"
                              name="state"
                              required
                            />
                            <label class="focus-label">State</label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group form-focus">
                            <input
                              id="zip"
                              type="text"
                              class="form-control floating"
                              name="zip"
                              required
                            />
                            <label class="focus-label">Zip Code</label>
                          </div>
                        </div>
                        <div class="col-md-12">
                          <div class="form-group form-focus">
                            <input
                              id="country"
                              type="text"
                              class="form-control floating"
                              name="country"
                              required
                            />
                            <label class="focus-label">Country</label>
                          </div>
                        </div>
                      </div>
                      <button
                        class="btn btn-primary btn-block btn-lg login-btn"
                        type="submit"
                      >
                        Continue
                      </button>
                      <!-- <div class="login-or">
                        <span class="or-line"></span>
                        <span class="span-or">or</span>
                      </div>
                      <div class="row form-row social-login">
                        <div class="col-6">
                          <a href="#" class="btn btn-facebook btn-block"
                            ><i class="fab fa-facebook-f mr-1"></i> Login</a
                          >
                        </div>
                        <div class="col-6">
                          <a href="#" class="btn btn-google btn-block"
                            ><i class="fab fa-google mr-1"></i> Login</a
                          >
                        </div>
                      </div> -->
                    </form>
                    <!-- /Register Form -->
                  </div>
                </div>
              </div>
              <!-- /Register Content -->
            </div>
          </div>
        </div>
      </div>
      <%- include ('../partials/homefooter') %>
    </div>

    <%- include ('../partials/commonscripts') %>
  </body>
</html>
